.banner-container{
    display: flex;
    flex-direction: column;
    margin-top: 10px;
    margin-bottom: 20px;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom:5px; 
}
.banner-author-date{
    margin: 5px 0 10px 5px;
}
.banner-author{
    width:60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.banner-date{
    margin-left: 20rpx;
    /*margin-bottom: 5px;*/
    vertical-align: middle;
    font-size: 26rpx;
}
.banner-title{
    font-size: 34rpx;
    /*font-weight: 600;*/
    color: #333;
    margin-bottom: 10px;
    margin-left: 20rpx;
}
.banner-image{
    width: 100%;
    height: 600rpx;
    margin: auto 0;
    margin-bottom: 15px;
}
.banner-content{
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-bottom: 10px;
    font-size: 28rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.banner-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16rpx;
    margin-left: 20rpx;
}
.banner-like-image{
    width: 20rpx;
    height: 20rpx;
    margin-right: 8rpx;
    vertical-align: middle;
}
.banner-like-font{
    vertical-align: middle;
    margin-right: 20rpx;
}