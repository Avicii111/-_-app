.container{
    display: flex;
    flex-direction: column;
}
.head_img{
    width: 100%;
    height:400px;
}
.author_data{
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}
.avatar{
    width: 64rpx;
    height: 32px;
    vertical-align: middle;
}
.audio{
    width: 128rpx;
    height: 64px;
    position: absolute;
    left: 50%;
    margin-left: -64rpx;
    top: 180px;
    opacity: 0.6;
}
.author{
    font-size: 30rpx;
    font-weight: 300;
    color: #666;
    margin-left: 20rpx;
    vertical-align: middle;
}
.const_text{
    margin-left: 20rpx;
    color: #999;
}
.date{
     font-size: 30rpx;
     font-weight: 300;
     color: #666;
     margin-left: 20rpx;
     vertical-align: middle;
}
.title{
    font-size: 36rpx;
    font-weight: 700;
    margin-left: 40rpx;
    margin-top: 15px;
    letter-spacing: 2rpx;
    color: #4b556c;
}
.tool{
    margin-top: 10px;
}
.circle_img{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}
.circle_img image{
    width: 90rpx;
    height: 45px;
    vertical-align: middle;
}
.share_img{
    margin-left:  30rpx;
}
.horizon{
    width: 690rpx;
    height: 1px;
    vertical-align: middle;
    background-color: #e5e5e5;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
}
.detail{
    margin-top: 10px;
    margin-right: 30rpx;
    margin-left: 30rpx;
    color: #666;
    line-height: 44rpx;
    letter-spacing: 2rpx;
}